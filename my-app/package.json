{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "main": "electron.js",
  "homepage": ".",
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "bootstrap": "^5.3.7",
    "chart.js": "^4.5.0",
    "papaparse": "^5.5.3",
    "react": "^19.1.0",
    "react-bootstrap": "^2.10.10",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "wordcloud": "^1.2.3",
    "xlsx": "^0.18.5"
  },
  "scripts": {
    "start": "concurrently --kill-others \"npm run react-start\" \"npm run electron-start\"",
    "start:win": "concurrently --kill-others \"cd ../server && npm start\" \"npm run react-start\" \"npm run electron-start:win\"",
    "start:mac": "concurrently --kill-others \"npm run react-start\" \"npm run electron-start:mac\"",
    "react-start": "set BROWSER=none && react-scripts start",
    "electron-start": "wait-on http://localhost:3000 && node_modules\\.bin\\electron.cmd .",
    "electron-start:win": "wait-on http://localhost:3000 && node_modules\\.bin\\electron.cmd .",
    "electron-start:mac": "wait-on http://localhost:3000 && ./node_modules/.bin/electron .",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "node_modules\\.bin\\electron.cmd .",
    "pack": "npm run build && npx electron-builder --win --x64",
    "build:win": "npm run build && npx electron-builder --win --x64",
    "dist": "npm run build:win"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "electron": "^37.2.4",
    "wait-on": "^8.0.4",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "va.explorer.app",
    "productName": "VA Explorer",
    "files": [
      "build/**/*",
      "electron.js",
      "preload.js",
      "detail-preload.js"
    ],
    "extraResources": [
      "../server/**/*"
    ],
    "asar": false,
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "artifactName": "${productName}-Setup-${version}-x64.exe"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
